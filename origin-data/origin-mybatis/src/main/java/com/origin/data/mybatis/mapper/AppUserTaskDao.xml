            set id=id
                    <if test="item.uid != null">,uid=#{item.uid}</if>
                    <if test="item.tid != null">,tid=#{item.tid}</if>
                    <if test="item.status != null">,status=#{item.status}</if>
                where id=#{item.id}
        </foreach>
