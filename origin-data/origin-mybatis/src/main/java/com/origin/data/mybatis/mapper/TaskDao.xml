<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.origin.data.mybatis.dao.TaskDao">
	<sql id="selectPart">
        SELECT
        		    id,
        		    name,
        		    type,
                    state
        FROM OGN_TASK
        where 1=1
	</sql>
    <sql id="queryParams">
			<if test="id != null">AND id=#{id}</if>
			<if test="name != null">AND name=#{name}</if>
			<if test="type != null">AND type=#{type}</if>
			<if test="state != null">AND state=#{state}</if>
    </sql>
    <resultMap type="com.origin.data.mybatis.entity.Task" id="taskMap">
    	<id property="id" column="id" />
    	<result property="id" column="id"/>
    	<result property="name" column="name"/>
    	<result property="type" column="type"/>
    	<result property="state" column="state"/>
    </resultMap>
    <select id="findByPK" parameterType="int" resultType="com.origin.data.mybatis.entity.Task">
        <include refid="selectPart"/>
        AND id=#{0}
    </select>
    <select id="findFirst" parameterType="com.origin.data.mybatis.entity.Task" resultType="com.origin.data.mybatis.entity.Task">
        <include refid="selectPart"/>
        <include refid="queryParams"/>
    </select>
    <select id="find" parameterType="com.origin.data.mybatis.entity.Task" resultType="com.origin.data.mybatis.entity.Task">
        <include refid="selectPart"/>
        <include refid="queryParams"/>
    </select>
    <insert id="save" parameterType="com.origin.data.mybatis.entity.Task">
        <selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO OGN_TASK (
                        <if test="name != null ">`name`,</if>
                        <if test="type != null ">`type`,</if>
                        <if test="state != null">`state`</if>
		)
		VALUES (

                        <if test="name != null">#{name},</if>
                        <if test="type != null">#{type},</if>
                        <if test="state != null">#{state}</if>

		)
    </insert>
    <update id="update" parameterType="com.origin.data.mybatis.entity.Task" >
        UPDATE OGN_TASK  SET
         id=id
                <if test="name != null">,name=#{name}</if>
                <if test="type != null">,type=#{type}</if>
                <if test="state != null">,state=#{state}</if>
        WHERE `id` = #{id}
    </update>
    <update id="updateBatch" parameterType="list" >
        <foreach collection="list" item="item"  separator=";" >
            update OGN_TASK
            set id=id
                    <if test="item.name != null">,name=#{name}</if>
                    <if test="item.type != null">,type=#{type}</if>
                    <if test="item.state != null">,state=#{state}</if>
                where id=#{item.id}
        </foreach>
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM OGN_TASK WHERE id=#{id}
    </delete>
</mapper>