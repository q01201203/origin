<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.origin.data.mybatis.dao.ProductDao">
	<sql id="selectPart">
        SELECT
        		    id,
        		    name,
        		    stock,
                    description
        FROM OGN_PRODUCT
        where 1=1
	</sql>
    <sql id="queryParams">
			<if test="id != null">AND id=#{id}</if>
			<if test="name != null">AND name=#{name}</if>
			<if test="stock != null">AND stock=#{stock}</if>
			<if test="description != null">AND description=#{description}</if>
    </sql>
    <resultMap type="com.origin.data.mybatis.entity.Product" id="productMap">
    	<id property="id" column="id" />
    	<result property="id" column="id"/>
    	<result property="name" column="name"/>
    	<result property="stock" column="stock"/>
    	<result property="description" column="description"/>
    </resultMap>
    <select id="findByPK" parameterType="int" resultType="com.origin.data.mybatis.entity.Product">
        <include refid="selectPart"/>
        AND id=#{0}
    </select>
    <select id="findFirst" parameterType="com.origin.data.mybatis.entity.Product" resultType="com.origin.data.mybatis.entity.Product">
        <include refid="selectPart"/>
        <include refid="queryParams"/>
    </select>
    <select id="find" parameterType="com.origin.data.mybatis.entity.Product" resultType="com.origin.data.mybatis.entity.Product">
        <include refid="selectPart"/>
        <include refid="queryParams"/>
    </select>
    <insert id="save" parameterType="com.origin.data.mybatis.entity.Product">
        <selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO OGN_PRODUCT (
                        <if test="name != null ">`name`,</if>
                        <if test="stock != null ">`stock`,</if>
                        <if test="description != null">`description`</if>
		)
		VALUES (

                        <if test="name != null">#{name},</if>
                        <if test="stock != null">#{stock},</if>
                        <if test="description != null">#{description}</if>

		)
    </insert>
    <update id="update" parameterType="com.origin.data.mybatis.entity.Product" >
        UPDATE OGN_PRODUCT  SET
         id=id
                <if test="name != null">,name=#{name}</if>
                <if test="stock != null">,stock=#{stock}</if>
                <if test="description != null">,description=#{description}</if>
        WHERE `id` = #{id}
    </update>
    <update id="updateBatch" parameterType="list" >
        <foreach collection="list" item="item"  separator=";" >
            update OGN_PRODUCT
            set id=id
                    <if test="item.name != null">,name=#{name}</if>
                    <if test="item.stock != null">,stock=#{stock}</if>
                    <if test="item.description != null">,description=#{description}</if>
                where id=#{item.id}
        </foreach>
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM OGN_PRODUCT WHERE id=#{id}
    </delete>
</mapper>